From 74c6a0e6e98d08d7993582f33394f4cedf7b5fed Mon Sep 17 00:00:00 2001
From: He Junyan <junyan.he@intel.com>
Date: Mon, 24 Apr 2023 16:56:16 +0800
Subject: [PATCH 16/24] va: baseenc: Add is_live field to check the live stream

---
 subprojects/gst-plugins-bad/sys/va/gstvabaseenc.c | 8 ++++++++
 subprojects/gst-plugins-bad/sys/va/gstvabaseenc.h | 2 ++
 2 files changed, 10 insertions(+)

diff --git a/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.c b/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.c
index 7b4e5190a2..3f7463c5ff 100644
--- a/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.c
+++ b/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.c
@@ -778,6 +778,7 @@ static gboolean
 gst_va_base_enc_set_format (GstVideoEncoder * venc, GstVideoCodecState * state)
 {
   GstVaBaseEnc *base = GST_VA_BASE_ENC (venc);
+  GstQuery *query;
 
   g_return_val_if_fail (state->caps != NULL, FALSE);
 
@@ -798,6 +799,13 @@ gst_va_base_enc_set_format (GstVideoEncoder * venc, GstVideoCodecState * state)
     gst_video_codec_state_unref (base->input_state);
   base->input_state = gst_video_codec_state_ref (state);
 
+  /* in case live streaming, we should run on low-latency mode */
+  base->is_live = FALSE;
+  query = gst_query_new_latency ();
+  if (gst_pad_peer_query (GST_VIDEO_ENCODER_SINK_PAD (venc), query))
+    gst_query_parse_latency (query, &base->is_live, NULL, NULL);
+  gst_query_unref (query);
+
   if (!gst_va_base_enc_reset (base))
     return FALSE;
 
diff --git a/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.h b/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.h
index 1cd2af19ef..c16c561661 100644
--- a/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.h
+++ b/subprojects/gst-plugins-bad/sys/va/gstvabaseenc.h
@@ -54,6 +54,8 @@ struct _GstVaBaseEnc
 
   gboolean reconf;
 
+  gboolean is_live;
+
   VAProfile profile;
   gint width;
   gint height;
